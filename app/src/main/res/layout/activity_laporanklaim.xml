<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.register.Register">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@color/cream">
            <ImageView
                android:id="@+id/back"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/left"
                android:clickable="true"
                android:focusable="true"
                >
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/merienda_bold"
                android:text="Laporan Klaim"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                >
            </TextView>
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewBarang"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:clipToPadding="false"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/img_item_photo"
            android:layout_centerHorizontal="true"
            android:layout_width="299dp"
            android:layout_height="199dp"
            android:background="@drawable/border"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="1dp"
            tools:src="@android:color/darker_gray"
            />
        <TextView
            android:id="@+id/namaBarang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="210dp"
            android:text="Nama Barang">

        </TextView>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:text="Username"
                    android:paddingRight="5dp"
                    android:background="@drawable/border_ubah"
                    android:layout_width="110dp"
                    android:layout_height="40dp" />
                <TextView
                    android:id="@+id/username"
                    android:textSize="14dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:background="@drawable/border_ubah"
                    android:layout_alignParentRight="true"
                    android:layout_width="185dp"
                    android:text="Aniiiii"
                    android:justificationMode="inter_word"
                    android:layout_height="40dp" />
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:text="Pertanyaan mengenai barang"
                    android:background="@drawable/border_ubah"
                    android:paddingRight="5dp"
                    android:layout_width="110dp"
                    android:layout_height="75dp" />
                <TextView
                    android:id="@+id/informasiDetail"
                    android:maxLines="5"
                    android:textSize="14dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:text="apa bentuk rumah sakit tersebut dan"
                    android:background="@drawable/border_ubah"
                    android:layout_alignParentRight="true"
                    android:justificationMode="inter_word"
                    android:gravity="top"
                    android:layout_width="185dp"
                    android:layout_height="75dp" />
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:text="Jawabannya"
                    android:background="@drawable/border_ubah"
                    android:paddingRight="5dp"
                    android:layout_width="110dp"
                    android:layout_height="75dp" />
                <TextView
                    android:id="@+id/jawaban"
                    android:maxLines="5"
                    android:textSize="14dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:text="apa bentuk rumah sakit tersebut dan"
                    android:background="@drawable/border_ubah"
                    android:layout_alignParentRight="true"
                    android:justificationMode="inter_word"
                    android:gravity="top"
                    android:layout_width="185dp"
                    android:layout_height="75dp" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/buttonTolak"
                    android:layout_width="140dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/merienda_bold"
                    android:textAlignment="center"
                    android:paddingTop="0dp"
                    android:layout_marginTop="10dp"
                    android:text="Tolak"
                    android:textSize="16dp"
                    app:cornerRadius="3dp"
                    app:backgroundTint="#F44336"/>
            <Button
                android:id="@+id/buttonTerima"
                android:layout_width="140dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:fontFamily="@font/merienda_bold"
                android:textAlignment="center"
                android:paddingTop="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Terima"
                android:textSize="16dp"
                app:cornerRadius="3dp"
                app:backgroundTint="#4CAF50"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
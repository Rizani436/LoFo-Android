<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#C8BE8C"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Judul -->
                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="120dp"
                    android:gravity="center"
                    android:text="LoFo"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <!-- Icon notifikasi -->
                <ImageView
                    android:id="@+id/notification_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="16dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/notifikasi"
                    android:contentDescription="Notifikasi" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <!-- Konten utama -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="280dp"
                android:layout_gravity="center">

            <ImageView
                android:id="@+id/image_profile"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:src="@drawable/image_beranda">

            </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:background="#AAC8BE8C">
                </TextView>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/merienda_bold"
                   android:text="MENEMUKAN KEMBALI"
                   android:textColor="@color/black"
                   android:textSize="17dp"
                   android:layout_marginTop="60dp"
                   android:layout_marginLeft="25dp"
                   >

               </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/merienda_bold"
                    android:text="BARANG HILANG"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="235dp">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/merienda_bold"
                    android:text="MEMBAWA"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:layout_marginTop="90dp"
                    android:layout_marginLeft="120dp"

                   >
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/merienda_bold"
                    android:text="KETENANGAN"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_marginTop="90dp"
                    android:layout_marginLeft="210dp">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/merienda_bold"
                    android:text="DAN MENGEMBALIKAN"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:layout_marginTop="120dp"
                    android:layout_marginLeft="55dp">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/merienda_bold"
                    android:text="HARAPAN"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:layout_marginTop="120dp"
                    android:layout_marginLeft="260dp">
                </TextView>
                <Button
                    android:id="@+id/button_barangKehilangan"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:fontFamily="@font/merienda_medium"
                    android:text="BARANG KEHILANGAN"
                    android:textSize="10dp"
                    android:backgroundTint="#491B1B"
                    android:layout_marginTop="190dp"
                    android:layout_marginLeft="25dp">
                </Button>

                <Button
                    android:id="@+id/button_barangTemuan"
                    android:layout_width="170dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="40dp"
                    android:fontFamily="@font/merienda_medium"
                    android:text="BARANG TEMUAN"
                    android:textSize="10dp"
                    android:backgroundTint="#491B1B"
                    android:layout_marginTop="190dp"
                    android:layout_marginRight="25dp">
                </Button>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/merienda_bold"
                    android:text="KATEGORI"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:textSize="36dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/merienda_bold"
                    android:text="KATEGORI"
                    android:layout_gravity="center"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textColor="@color/cream"
                    android:textSize="35dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp">

                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp">

                <RelativeLayout
                    android:id="@+id/kategori_aksesoris"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:clickable="true">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@color/cream">

                    </TextView>

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/aksesoris">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="90dp"
                        android:fontFamily="@font/merienda_medium"
                        android:text="Aksesoris"
                        android:textColor="@color/white"
                        android:textSize="16dp">

                    </TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/kategori_kendaraan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="60dp"
                    android:clickable="true">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@color/cream">

                    </TextView>

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/kendaraan"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="90dp"
                        android:fontFamily="@font/merienda_medium"
                        android:text="Kendaraan"
                        android:textColor="@color/white"
                        android:textSize="16dp">

                    </TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/kategori_elektronik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="150dp"
                    android:clickable="true">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@color/cream">

                    </TextView>

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/elektronik"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="90dp"
                        android:fontFamily="@font/merienda_medium"
                        android:text="Elektronik"
                        android:textColor="@color/white"
                        android:textSize="16dp">

                    </TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/kategori_dokumen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="150dp"
                    android:layout_marginRight="60dp"
                    android:clickable="true">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@color/cream">

                    </TextView>

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/dokumen"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="90dp"
                        android:fontFamily="@font/merienda_medium"
                        android:text="Dokumen"
                        android:textColor="@color/white"
                        android:textSize="16dp">

                    </TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/kategori_lainnya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="300dp"
                    android:layout_marginRight="60dp"
                    android:clickable="true">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@color/cream">

                    </TextView>

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/lainnya"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="90dp"
                        android:fontFamily="@font/merienda_medium"
                        android:text="Dan Lain-Lain"
                        android:textColor="@color/white"
                        android:textSize="16dp">

                    </TextView>

                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
        </ScrollView>


        <!-- Logout -->
<!--        <Button-->
<!--            android:id="@+id/buttonLogout"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="center"-->
<!--            android:layout_marginBottom="16dp"-->
<!--            android:text="Logout"-->
<!--            android:backgroundTint="#FF0000"-->
<!--            android:textSize="15sp" />-->
    </LinearLayout>

    <!-- Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/nav_menu"
        app:headerLayout="@layout/nav_header" />
</androidx.drawerlayout.widget.DrawerLayout>

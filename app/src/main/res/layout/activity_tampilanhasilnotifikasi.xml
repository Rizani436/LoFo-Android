<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.register.Register">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@color/cream">
            <ImageView
                android:id="@+id/back"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/left"
                android:clickable="true"
                android:focusable="true"
                >
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/merienda_bold"
                android:text="Terima Laporan Klaim"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                >
            </TextView>
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewBarang"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:clipToPadding="false"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/img_item_photo"
            android:layout_centerHorizontal="true"
            android:layout_width="299dp"
            android:layout_height="199dp"
            android:background="@drawable/border"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="1dp"
            tools:src="@android:color/darker_gray"
            />
        <TextView
            android:id="@+id/namaBarang"
            android:textSize="14dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:gravity="center"
            android:layout_marginTop="200dp"
            android:layout_centerHorizontal="true"
            android:layout_width="185dp"
            android:text="Rumah Sakit Kota"
            android:justificationMode="inter_word"
            android:layout_height="40dp" />
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">
                <RelativeLayout
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:text="Username"
                    android:background="@drawable/border_ubah"
                    android:paddingRight="5dp"
                    android:layout_width="110dp"
                    android:layout_height="40dp" />
                <TextView
                    android:id="@+id/username"
                    android:maxLines="2"
                    android:textSize="14dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:text="Sandubaya"
                    android:background="@drawable/border_ubah"
                    android:layout_alignParentRight="true"
                    android:justificationMode="inter_word"
                    android:layout_width="185dp"
                    android:layout_height="40dp" />
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:text="Tanggal Penemuan"
                    android:background="@drawable/border_ubah"
                    android:paddingRight="5dp"
                    android:layout_width="110dp"
                    android:layout_height="40dp" />
                <TextView
                    android:id="@+id/tanggalTemuan"
                    android:maxLines="2"
                    android:textSize="14dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:text="2022-07-26"
                    android:background="@drawable/border_ubah"
                    android:layout_alignParentRight="true"
                    android:justificationMode="inter_word"
                    android:layout_width="185dp"
                    android:layout_height="40dp" />
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:text="Tempat Penemuan"
                    android:background="@drawable/border_ubah"
                    android:paddingRight="5dp"
                    android:layout_width="110dp"
                    android:layout_height="40dp" />
                <TextView
                    android:id="@+id/tempatTemuan"
                    android:maxLines="2"
                    android:textSize="14dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:text="Terong Tawah"
                    android:background="@drawable/border_ubah"
                    android:layout_alignParentRight="true"
                    android:justificationMode="inter_word"
                    android:layout_width="185dp"
                    android:layout_height="40dp" />
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:text="Kota/Kabupaten"
                    android:background="@drawable/border_ubah"
                    android:paddingRight="5dp"
                    android:layout_width="110dp"
                    android:layout_height="40dp" />
                <TextView
                    android:id="@+id/kotaKabupaten"
                    android:maxLines="2"
                    android:textSize="14dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:text="Lombok Barat"
                    android:background="@drawable/border_ubah"
                    android:layout_alignParentRight="true"
                    android:justificationMode="inter_word"
                    android:layout_width="185dp"
                    android:layout_height="40dp" />
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:text="Kategori"
                    android:background="@drawable/border_ubah"
                    android:paddingRight="5dp"
                    android:layout_width="110dp"
                    android:layout_height="40dp" />
                <TextView
                    android:id="@+id/kategori"
                    android:maxLines="2"
                    android:textSize="14dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:text="Dan Lain-lain"
                    android:background="@drawable/border_ubah"
                    android:layout_alignParentRight="true"
                    android:justificationMode="inter_word"
                    android:layout_width="185dp"
                    android:layout_height="40dp" />
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:text="Status"
                    android:background="@drawable/border_ubah"
                    android:paddingRight="5dp"
                    android:layout_width="110dp"
                    android:layout_height="40dp" />
                <TextView
                    android:id="@+id/status"
                    android:maxLines="2"
                    android:textSize="14dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:text="Status"
                    android:background="@drawable/border_ubah"
                    android:layout_alignParentRight="true"
                    android:justificationMode="inter_word"
                    android:layout_width="185dp"
                    android:layout_height="40dp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/buttonChat"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#29a71a"
                android:gravity="center"
                android:layout_marginTop="10dp"
                >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/whatsapp"
                    >

                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chat WhatsApp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonTelpon"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#29a71a"
                android:gravity="center"
                android:layout_marginTop="10dp"
                >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/phone_call"
                    >

                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telepon"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/buttonSMS"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#29a71a"
                android:gravity="center"
                android:layout_marginTop="10dp"
                >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/sms"
                    >

                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kirim Pesan"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/cream">
        <ImageView
            android:id="@+id/img_item_photo"
            android:layout_centerHorizontal="true"
            android:layout_width="299dp"
            android:layout_height="199dp"
            android:background="@drawable/border"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:padding="1dp"
            tools:src="@android:color/darker_gray"
            />
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:text="Nama Barang"
                    android:paddingRight="5dp"
                    android:background="@drawable/border"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/namaBarang"
                    android:textSize="12dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/border"
                    android:layout_alignParentRight="true"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:text="Kategori Barang"
                    android:paddingRight="5dp"
                    android:background="@drawable/border"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/kategoriBarang"
                    android:textSize="12dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/border"
                    android:layout_alignParentRight="true"
                    android:paddingRight="5dp"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:text="Tanggal Pemenuan"
                    android:background="@drawable/border"
                    android:layout_width="110dp"
                    android:paddingRight="5dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tanggalTemuan"
                    android:maxLines="2"
                    android:paddingTop="5dp"
                    android:textSize="12dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/border"
                    android:paddingRight="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="185dp"
                    android:layout_height="30dp" />
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:text="Tempat Penemuan"
                    android:background="@drawable/border"
                    android:paddingRight="5dp"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tempatTemuan"
                    android:maxLines="2"
                    android:textSize="12dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/border"
                    android:layout_alignParentRight="true"
                    android:layout_width="185dp"
                    android:layout_height="30dp" />
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:text="Kota/Kabupaten"
                    android:background="@drawable/border"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/kotaKabupaten"
                    android:maxLines="2"
                    android:textSize="12dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/border"
                    android:layout_alignParentRight="true"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:text="Pertanyaan yang diajukan mengenai barang"
                    android:background="@drawable/border"
                    android:paddingRight="5dp"
                    android:layout_width="110dp"
                    android:layout_height="75dp" />
                <TextView
                    android:id="@+id/informasiDetail"
                    android:maxLines="5"
                    android:textSize="12dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/border"
                    android:layout_alignParentRight="true"
                    android:layout_width="185dp"
                    android:layout_height="75dp" />
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:text="Nomor Handphone"
                    android:background="@drawable/border"
                    android:paddingRight="5dp"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/noHP"
                    android:maxLines="2"
                    android:textSize="12dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/border"
                    android:layout_alignParentRight="true"
                    android:layout_width="185dp"
                    android:layout_height="30dp" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                >

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonHapus"
                    android:layout_width="94dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/merienda_bold"
                    android:textAlignment="center"
                    android:paddingTop="0dp"
                    android:text="Hapus"
                    android:textSize="10dp"
                    app:cornerRadius="3dp"
                    app:backgroundTint="#FF0000"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonUbah"
                    android:layout_width="95dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="8dp"
                    android:backgroundTint="#4CAF50"
                    android:layout_gravity="center"
                    android:fontFamily="@font/merienda_bold"
                    android:textAlignment="center"
                    android:paddingTop="0dp"
                    android:text="Ubah"
                    app:cornerRadius="3dp"
                    android:textSize="10dp"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonLaporan"
                    android:layout_width="95dp"
                    android:layout_height="35dp"
                    android:backgroundTint="#009688"
                    android:layout_gravity="center"
                    android:fontFamily="@font/merienda_bold"
                    android:textAlignment="center"
                    android:paddingTop="0dp"
                    android:text="Laporan"
                    app:cornerRadius="3dp"
                    android:textSize="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:padding="5dp"
                    android:background="#FF9800"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="13dp"
                        android:text="Status :">
                    </TextView>
                    <TextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:text="Diterima"
                        android:textSize="13dp"
                        >
                    </TextView>

                </RelativeLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSelesai"
                    android:layout_width="145dp"
                    android:layout_height="35dp"
                    android:backgroundTint="#3F51B5"
                    android:layout_gravity="center"
                    android:fontFamily="@font/merienda_bold"
                    android:textAlignment="center"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="10dp"
                    android:text="Selesai"
                    app:cornerRadius="3dp"
                    android:textSize="10dp"
                    />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
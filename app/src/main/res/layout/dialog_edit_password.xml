<!-- res/layout/dialog_edit_name.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:text="Masukkan Password Lama"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <EditText
            android:id="@+id/passwordLama"
            android:layout_width="365dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:hint="Masukkan Password Lama"
            android:inputType="textPassword"
            android:textSize="16dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingEnd="50dp" /> <!-- Biar gak ketimpa icon -->

        <ImageView
            android:id="@+id/showPasswordLamaIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/eye_off"
            android:layout_alignEnd="@id/passwordLama"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:padding="5dp" />
    </RelativeLayout>
    <TextView
        android:text="Masukkan Password Baru"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <EditText
            android:id="@+id/passwordBaru"
            android:layout_width="365dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:hint="Masukkan Password Baru"
            android:inputType="textPassword"
            android:textSize="16dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingEnd="50dp" /> <!-- Biar gak ketimpa icon -->

        <ImageView
            android:id="@+id/showPasswordBaruIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/eye_off"
            android:layout_alignEnd="@id/passwordBaru"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:padding="5dp" />
    </RelativeLayout>
    <TextView
        android:text="Masukkan Lagi Password Baru"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <EditText
            android:id="@+id/passwordBaruLagi"
            android:layout_width="365dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:hint="Masukkan Ulang Password Baru"
            android:inputType="textPassword"
            android:textSize="16dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingEnd="50dp" /> <!-- Biar gak ketimpa icon -->

        <ImageView
            android:id="@+id/showPasswordBaruLagiIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/eye_off"
            android:layout_alignEnd="@id/passwordBaruLagi"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:padding="5dp" />
    </RelativeLayout>
</LinearLayout>

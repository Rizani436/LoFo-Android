<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.register.Register">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@color/cream">
            <ImageView
                android:id="@+id/back"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/left"
                android:clickable="true"
                android:focusable="true"
                >
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/merienda_bold"
                android:text="Profile"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                >
            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pilihGambarButton"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_gravity="center"

            android:clickable="true"
            android:focusable="true"
            android:background="#59C8C8BA">
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/profile_picture"
                android:contentDescription="Foto Profil" />

            <TextView
                android:id="@+id/namaFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Klik untuk mengubah foto"
                android:textColor="@android:color/black"
                android:textSize="12dp"
                />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/buttonUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/merienda_bold"
                android:textColor="@color/black"
                android:text="Username  "
                android:textSize="16dp"
                >
            </TextView>
            <TextView
                android:id="@+id/username"
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:fontFamily="@font/merienda_light"
                android:textColor="@color/black"
                android:text="Username"
                android:textSize="16dp"
                >
            </TextView>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:fontFamily="@font/merienda_light"
                android:textColor="@color/black"
                android:text=">"
                android:textSize="28dp"
                >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/merienda_bold"
                android:textColor="@color/black"
                android:text="Email  "
                android:textSize="16dp"
                >
            </TextView>
            <TextView
                android:id="@+id/email"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:fontFamily="@font/merienda_light"
                android:textColor="@color/black"
                android:text="Email"
                android:textSize="16dp"
                >
            </TextView>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:fontFamily="@font/merienda_light"
                android:textColor="@color/black"
                android:text=">"
                android:textSize="28dp"
                >
            </TextView>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/buttonNamaLengkap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/merienda_bold"
                android:textColor="@color/black"
                android:text="Nama Lengkap  "
                android:textSize="16dp"
                >
            </TextView>
            <TextView
                android:id="@+id/namaLengkap"
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:fontFamily="@font/merienda_light"
                android:textColor="@color/black"
                android:text="Nama Lengkap"
                android:textSize="16dp"
                >
            </TextView>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:fontFamily="@font/merienda_light"
                android:textColor="@color/black"
                android:text=">"
                android:textSize="28dp"
                >
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/buttonJenisKelamin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/merienda_bold"
                android:textColor="@color/black"
                android:text="Jenis Kelamin  "
                android:textSize="16dp"
                >
            </TextView>
            <TextView
                android:id="@+id/jenisKelamin"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:fontFamily="@font/merienda_light"
                android:textColor="@color/black"
                android:text="Jenis Kelamin"
                android:textSize="16dp"
                >
            </TextView>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:fontFamily="@font/merienda_light"
                android:textColor="@color/black"
                android:text=">"
                android:textSize="28dp"
                >
            </TextView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/merienda_bold"
                android:textColor="@color/black"
                android:text="Alamat  "
                android:textSize="16dp"
                >
            </TextView>
            <TextView
                android:id="@+id/alamat"
                android:layout_width="258dp"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:fontFamily="@font/merienda_light"
                android:textColor="@color/black"
                android:text="Alamat"
                android:textSize="16dp"
                >
            </TextView>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:fontFamily="@font/merienda_light"
                android:textColor="@color/black"
                android:text=">"
                android:textSize="28dp"
                >
            </TextView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonNoHP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/merienda_bold"
                android:textColor="@color/black"
                android:text="Nomor HP  "
                android:textSize="16dp"
                >
            </TextView>
            <TextView
                android:id="@+id/noHP"
                android:layout_width="232dp"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:fontFamily="@font/merienda_light"
                android:textColor="@color/black"
                android:text="Nomor HP"
                android:textSize="16dp"
                >
            </TextView>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:fontFamily="@font/merienda_light"
                android:textColor="@color/black"
                android:text=">"
                android:textSize="28dp"
                >
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/buttonUbahPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/merienda_bold"
                android:textColor="@color/black"
                android:text="Ubah Password  "
                android:textSize="16dp"
                >
            </TextView>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:fontFamily="@font/merienda_light"
                android:textColor="@color/black"
                android:text=">"
                android:textSize="28dp"
                >
            </TextView>


        </LinearLayout>



    </LinearLayout>

</ScrollView>